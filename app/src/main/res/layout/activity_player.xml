<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/head_text"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:textColor="@color/pink1"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/listview1"
        android:choiceMode="singleChoice"
        android:listSelector="@color/pinkMain"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/head_text"
        />
    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:seek_bar_color="@color/pink1"
        app:next_icon_color="@color/pink1"
        app:pause_icon_color="@color/pink"
        app:play_icon_color="@color/pink"
        app:previous_icon_color="@color/pink1"
        app:progress_color = "@color/pink1"
        app:random_icon_color="@color/pink"
        app:repeat_icon_color="@color/pink"


        />



</RelativeLayout>